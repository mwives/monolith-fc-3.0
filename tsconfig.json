{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["./src/modules/@shared/*"],
      "@checkout/*": ["./src/modules/checkout/*"],
      "@client-adm/*": ["./src/modules/client-adm/*"],
      "@invoice/*": ["./src/modules/invoice/*"],
      "@payment/*": ["./src/modules/payment/*"],
      "@product-adm/*": ["./src/modules/product-adm/*"],
      "@store-catalog/*": ["./src/modules/store-catalog/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
